<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Service</h3>
        </div>
        <div class="card-body">
            <form action="/services/edit/{{client._id}}/{{editService._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                 <div class="form-group">
                    <input type="date" name="from" class="form-control"  min="2020-01-01" max="2033-12-31">
                </div>
                <div class="form-group">
                    <input type="date" name="renew" class="form-control"  min="2020-01-01" max="2033-12-31">
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="{{editService.price}}">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="{{editService.description}}" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>