<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Client</h3>
        </div>
        <div class="card-body">
            <form action="/clients/edit/{{client._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                 <div class="form-group">
                    <input type="text" name="clientName" class="form-control" value="{{client.clientName}}">
                </div>
                <div class="form-group">
                    <input type="text" name="contactName" class="form-control" value="{{client.contactName}}">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" class="form-control" value="{{client.phone}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" value="{{client.email}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cuit" class="form-control" value="{{client.cuit}}">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
                 <div class="serviceList">
        <h2 class="title">Services: <a href="/services/add/{{client._id}}"><i class="fa-solid fa-plus"></i></a></h2>
        {{#each client.service}}
            <div class="service mx-auto">
                <div class="card">
                    <div class="card-header">
            <p class="title"> {{this.name}}<a href="/services/edit/{{../client._id}}/{{this._id}}"><i class="fas fa-edit"></i></a></p>
                    </div>
            <div class="card-body">
                <p class="serviceItem">Start: {{this.date}}</p>
                <p class="serviceItem">Renew: {{this.renew}}</p>
                <p class="serviceItem">Price: {{this.price}}</p>
                <p class="serviceItem">{{this.description}}</p>
            </div>
            </div>
            <form action="/services/delete/{{../client._id}}/{{this._id}}?_method=DELETE" method="POST">
                <input type="hidden" name="method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Delete Service</button>
            </form>
            </div>
        {{/each}}
    </div>
                <form action="/clients/delete/{{client._id}}?_method=DELETE" method="POST">
                <input type="hidden" name="method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Delete Client!!!</button>
                </form>
                </div>
        </div>
    </div>
</div>