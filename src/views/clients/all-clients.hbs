<h1>All Clients</h1>
<div class="row">
    {{#each clientsList}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    <a href="/client/{{_id}}">{{clientName}}</a>
                    <a href="/clients/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <ul>
                <li class="cli">Name: {{contactName}}</li>
                <li class="cli">Phone: {{phone}}</li>
                <li class="cli">Email: {{email}}</li>
                <li class="cli">Cuit: {{cuit}}</li>
                </ul>
                <p class="cliService">Services: </p>
                <ul>       
                {{#each service}}
                <li class="cli">{{this.name}}</li>
                {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/each}}
</div>